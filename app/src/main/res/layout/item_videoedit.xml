<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/itembg_topShadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/itembg">

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:background="#f2f5f9"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="57dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <com.meicam.sdk.NvsThumbnailView
                android:id="@+id/videoCover"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentBottom="true"
                android:background="@mipmap/assetnumberbg">

                <TextView
                    android:id="@+id/assetNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="4dp"
                    android:textColor="#ffffff"
                    android:textSize="9sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/videoEditBtn"
            android:layout_width="56dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="103dp"
            android:background="@mipmap/edit" />

        <ImageView
            android:id="@+id/videoDeleteBtn"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="27dp"
            android:background="@mipmap/delete" />

        <RelativeLayout
            android:layout_width="19dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="27dp"
            android:background="#4abafe">

            <ImageView
                android:id="@+id/videoSorttn"
                android:layout_width="8dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:background="@mipmap/sortimage" />
        </RelativeLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/itembg_bottomShadow"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@mipmap/itembg">

    </RelativeLayout>
</LinearLayout>
