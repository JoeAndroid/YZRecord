<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/selectview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/leftHandle"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:background="#3db6ff"
                    android:layout_alignParentLeft="true">
                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="14dp"
                            android:background="@mipmap/editorslider"
                            android:layout_centerInParent="true" />
                </RelativeLayout>

                <View
                    android:id="@+id/timeSpanShadow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/leftHandle"
                    android:layout_toLeftOf="@+id/rightHandle"
                    android:background="#805db5ff">
                </View>

                <RelativeLayout
                    android:id="@+id/rightHandle"
                    android:layout_width="18dp"
                    android:layout_height="match_parent"
                    android:background="#3db6ff"
                    android:layout_alignParentRight="true">
                        <ImageView
                            android:layout_width="9dp"
                            android:layout_height="14dp"
                            android:background="@mipmap/editorslider"
                            android:layout_centerInParent="true"/>
                </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>